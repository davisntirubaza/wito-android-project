<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16sp">

    <TextView
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_close_24"
        android:layout_gravity="end"/>

    <!--WEKA IMAGE YA DOLLA HYO, MIM NMEWEK YOYOTR TU HUKU-->
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="98sp"
        android:layout_height="98sp"
        android:src="@drawable/baseline_monetization_on_24"
        android:padding="5sp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mwldelfleÃ¶fELDLAdsasdkjferfkecksdcmdmekfelfwlwklkcmklmlkwfelfeklcsmcddvekglelladjlwdwekfrnk"
        android:textSize="18sp"
        android:lineSpacingExtra="8dp"
        android:padding="16dp"
        android:textColor="#808080"
        android:gravity="start" />

    <EditText
        android:id="@+id/edt_kiasi"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="15sp"
        android:hint="Weka kiasi"
        android:textColor="#808080"
        android:paddingStart="16sp"
        android:background="@drawable/gray_box"/>

    <View
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="1sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bei kabla ya kodi"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="start" />

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1,000/="
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="start" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bei pamoja na kodi"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="start" />

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1,800/="
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="start" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Jumla"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="start" />

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2,800/="
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="start" />

    </LinearLayout>

    <EditText
        android:id="@+id/edt_neno_siri"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="15sp"
        android:hint="Neno siri"
        android:textColor="#808080"
        android:paddingStart="16sp"
        android:background="@drawable/gray_box"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/edt_rudia_neno_siri"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="15sp"
        android:hint="Rudia neno siri"
        android:textColor="#808080"
        android:paddingStart="16sp"
        android:background="@drawable/gray_box"/>

    <!--BUTTON STYLE NADHAN UNAYO SO WEKA KUTOKAN N DESIGN YA HUKO-->
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="15sp"
        android:id="@+id/btn_nunua_hisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/gray_box"
        android:text="Kamilisha"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"/>

</LinearLayout>