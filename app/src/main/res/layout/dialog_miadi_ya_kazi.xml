<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:padding="16sp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cancel_button_miadi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:drawableStart="@drawable/baseline_close_24"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="98sp"
                android:layout_height="98sp"
                android:layout_gravity="center_horizontal"
                android:padding="5sp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_business_center_24"
                android:tint="@color/primaryColor" />

            <EditText
                android:id="@+id/edt_kuanzia_tarehe"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/gray_box"
                android:hint="Kuanzia tarehe"
                android:paddingStart="16sp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_hadi_tarehe"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/gray_box"
                android:hint="Hadi tarehe"
                android:paddingStart="16sp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_thibitisha_miadi"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/gray_box"
                android:hint="Uthibitisho wa miradi"
                android:paddingStart="16sp"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_kamilisha_miadi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15sp"
                android:background="@drawable/blue_button_shade"
                android:text="Kamilisha"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>

    <!--WEKA IMAGE YA DOLLA HYO, MIM NMEWEK YOYOTR TU HUKU-->

    <!--BUTTON STYLE NADHAN UNAYO SO WEKA KUTOKAN N DESIGN YA HUKO-->

</LinearLayout>